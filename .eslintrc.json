{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:prettier/recommended"
     ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },

    "plugins": [
        "@typescript-eslint",
        "prettier"
     ],

    "rules": {
        "prettier/prettier": "error",
        "class-methods-use-this": "off",
        "import/extensions": "off",
        "no-console": "off"
    },
    
    "settings": {
        "import/resolver":{
           "node":{"extensions":[".ts"]}
        }
     }
}
